<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name=viewport content="width=device-width, initial-scale=1">
    <meta name="mobile-web-app-capable" content="yes">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/css")
    @Scripts.Render("~/js")
    @*<script src="~/Content/js/app.js"></script>*@
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,700,300&subset=latin,vietnamese' rel='stylesheet' type='text/css'>
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="ui inline nag" id="msgPrompt">
        <span class="title">
            <div id="msgPromptText"></div>
        </span>
        <i class="close icon"></i>
    </div>
    @using Microsoft.AspNet.Identity
    @using vls.Classes.Helpers
    @if (User.Identity.IsAuthenticated)
    {
        @Html.AntiForgeryToken()
        <div class="ui grid" style="height: 100%">
            @Html.Partial("_Menu")
            <div class="row" style="height: 100%">
                @*<div class="two wide column" style="margin-top: -15px; height: 100%;" id="mainSidebar">
                @Html.Partial("_NavigationPage")
            </div>*@
                <div class="sixteen wide column" style="padding-left: 20px; padding-right: 10px">
                    @*@Html.Partial("_HeaderPage")*@
                    @*@Html.Partial("_Menu")*@
                    @RenderBody()
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="ui grid">
            <div class="row">
                <div class="sixteen wide column">
                    @Html.Partial("_HeaderPage2")
                    @RenderBody()
                </div>
            </div>
        </div>
    }
</body>
</html>
