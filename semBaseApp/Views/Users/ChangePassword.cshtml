
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ui grid" id="ManageProfilePage">
    <div class="left floated eleven wide column">
        <div class="ui raised blue segment">
            <div class="ui ribbon blue huge label">
                Profile Data
            </div>
            <div class="ui form" >
                <div class="ui horizontal icon divider">
                    <i class="circular user icon"></i>
                </div>
                <div class="two fields">
                    <div class="field">
                        <label>Username</label>
                        <div class="ui raised secondary segment">
                            <p data-bind="text: UserName"></p>
                            <div class="ui corner label">
                                <i class="icon user"></i>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label>Full Name</label>
                        <div class="ui raised secondary segment">
                            <p data-bind="text: FullName"></p>
                            <div class="ui corner label">
                                <i class="icon tag"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="two fields">
                    <div class="field">
                        <label>Email</label>
                        <div class="ui raised secondary segment">
                            <p data-bind="text: Email"></p>
                            <div class="ui corner label">
                                <i class="unlink url"></i>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label>Phone Number</label>
                        <div class="ui raised secondary segment">
                            <p data-bind="text: PhoneNumber"></p>
                            <div class="ui corner label">
                                <i class="call square sign"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="two fields">
                    <div class="field">
                        <label>Date of Birth</label>
                        <div class="ui raised secondary segment">
                            <p data-bind="text: DateOfBirth"></p>
                            <div class="ui corner label">
                                <i class="icon calendar"></i>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label>Role</label>
                        <div class="ui raised secondary segment">
                            <p data-bind="text: Roles"></p>
                            <div class="ui corner label">
                                <i class="icon flag"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="three fields" data-bind="visible: IsAgent">
                    <div class="field">
                        <label>Branch</label>
                        <div class="ui raised secondary segment">
                            <p data-bind="text: Branch"></p>
                        </div>
                    </div>
                    <div class="field">
                        <label>City</label>
                        <div class="ui raised secondary segment">
                            <p data-bind="text: City"></p>
                        </div>
                    </div>
                    <div class="field">
                        <label>Country</label>
                        <div class="ui raised secondary segment">
                            <p data-bind="text: Country"></p>
                        </div>
                    </div>
                </div>
                </div>
                
            </div>
        
    </div>
    <div class="right floated five wide column">
        <div class="ui raised red segment">
            <div class="ui ribbon red huge label">
                Change Password
            </div>
            <div class="ui form raised segment" id="ChangePasswordForm">
                <div class="ui horizontal icon divider">
                    <i class="circular lock icon"></i>
                </div>
                <div class="field">
                    <label>Old Password</label>
                    <div class="ui left icon corner labeled icon input">
                        <input type="password" name="opassword" data-bind="value: OPassword">
                        <i class="lock icon"></i>
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label>New Password</label>
                    <div class="ui left icon corner labeled icon input">
                        <input type="password" name="npassword" data-bind="value: NPassword">
                        <i class="lock icon"></i>
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label> Confirm Password</label>
                    <div class="ui left icon corner labeled icon input">
                        <input type="password" name="cpassword" data-bind="value: CPassword">
                        <i class="lock icon"></i>
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
                
                <div class="ui buttons right floated">
                    <div class="ui animated fade teal submit button" data-bind="click: change">
                        <div class="visible content">Save</div>
                        <div class="hidden content">
                            <i class="save icon"></i>
                        </div>
                    </div>
                    <div class="or"></div>
                    <div class="ui animated fade red button" @*data-bind="click: closeForms"*@>
                        <div class="visible content">Reset</div>
                        <div class="hidden content">
                            <i class="remove icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/js/app/manageprofile.js"></script>