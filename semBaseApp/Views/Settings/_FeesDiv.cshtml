<template id='fees-template'>
    <div class="ui raised orange segment">
        <div class="ui orange ribbon huge label">
            Transfer Fees
        </div>
        <div class="ui right floated animated fade positive button" data-bind="click: showAdd">
            <div class="visible content">Add New</div>
            <div class="hidden content">
                <i class="add sign icon"></i>
            </div>
        </div>

        <table class="ui table segment">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Minimum Amount</th>
                    <th>Maximum Amount</th>
                    <th>Fee</th>
                    <th></th>
                </tr>
            </thead>
            <tbody data-bind="foreach: data">
                <tr>
                    <td data-bind="text: $index() + 1" class="left floated"></td>
                    <td data-bind="text: $data.MinimumAmount"></td>
                    <td data-bind="text: $data.MaximumAmount"></td>
                    <td data-bind="text: $data.Fee"></td>
                    <td>
                        <div class="ui buttons right floated">
                            <div class="ui animated fade teal button" data-bind="click: $parent.showEdit.bind($root)">
                                <div class="visible content">Edit</div>
                                <div class="hidden content">
                                    <i class="edit icon"></i>
                                </div>
                            </div>
                            <div class="or"></div>
                            <div class="ui animated fade red button" data-bind="click: $parent.showDelete.bind($root)">
                                <div class="visible content">Delete</div>
                                <div class="hidden content">
                                    <i class="remove icon"></i>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div id="FeeFormModal" class="ui small modal raised blue segment">
        <i class="close icon"></i>
        <div class="ui orange ribbon huge label">
            Transfer Fees
        </div>
        <div class="ui form raised segment" id="addFeeForm">
            <div class="content">
                <div class="field" title="Name of Mode">
                    <label>Minimum Amount</label>
                    <div class="ui left icon corner labeled icon input">
                        <input type="number" placeholder="Minimum Amount" data-bind="value: MinimumAmount">
                        <i class="user icon"></i>
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label>Maximum Amount</label>
                    <div class="ui left icon corner labeled icon input">
                        <input type="number" placeholder="Maximum Amount" data-bind="value: MaximumAmount">
                        <i class="tags icon"></i>
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label>Fee</label>
                    <div class="ui left icon corner labeled icon input">
                        <input type="number" placeholder="Fee" data-bind="value: Fee">
                        <i class="tags icon"></i>
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="actions">
                <div class="ui buttons right floated">
                    <div class="ui animated fade teal submit button" data-bind="click: add">
                        <div class="visible content">Save</div>
                        <div class="hidden content">
                            <i class="save icon"></i>
                        </div>
                    </div>
                    <div class="or"></div>
                    <div class="ui animated fade red button">
                        <div class="visible content">Cancel</div>
                        <div class="hidden content">
                            <i class="remove icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="FeeDeleteModal" class="ui small modal">
        <i class="close icon"></i>
        <div class="header">
            Delete
        </div>
        <div class="content">
            Do you really want to delete the record?
        </div>
        <div class="actions">
            <div class="ui buttons">
                <div class="ui positive button" data-bind="click: del">Yes</div>
                <div class="or"></div>
                <div class="ui primary button">No</div>
            </div>
        </div>
    </div>
</template>

